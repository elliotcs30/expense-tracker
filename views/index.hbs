<a href="./records/new">Create</a>

<ul>
  {{#each records}}
    <li>
      {{this.name}}, {{this.data}}, {{this.amount}}, {{this.userId}}, {{this.categoryId}}, {{this.createAt}} <br>
      <a href="./records/{{ this._id }}">detail</a>
      <a href="./records/{{ this._id }}/edit">edit</a>
      <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit">delete</button>
      </form>
    </li>
  {{/each}}
</ul>